  <span class="nt">&lt;ion-card</span> <span class="na">*ngFor=</span><span class="s">"let msg of massage"</span><span class="nt">&gt;</span>
    <span class="nt">&lt;ion-card-content&gt;</span>
      

    <span class="nt">&lt;/ion-card-content&gt;</span>
  <span class="nt">&lt;/ion-card&gt;</span>
